<!DOCTYPE html>
<html>
<head>
    <title>Cart Items</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
            table-layout: fixed;
        }

        th, td {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #f2f2f2;
        }

        th, td {
            width: 25%;
        }

        .buttons {
            margin-top: 20px;
            text-align: right;
        }

            .buttons button {
                padding: 10px 20px;
                margin-right: 10px;
                font-size: 16px;
            }

        .qty-input {
            padding: 0.5rem;
            display: flex;
            align-items: center;
            justify-content: flex-start;
        }

        .product-qty {
            width: 40px;
            padding: 5px;
            height: 25px;
            border: 1px solid #ccc;
            border-radius: 5px;
            text-align: center;
            background-color: #fff;
            margin: 0 2px;
        }

        .qty-count {
            background-color: #f0f0f0;
            border: 1px solid #ccc;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
            height: 25px;
            width: 30px;
            margin: 0 2px;
        }

            .qty-count:hover {
                background-color: #e0e0e0;
            }

            .qty-count::before {
                content: "+";
            }

        .qty-count--minus::before {
            content: "-";
        }

        input[type="number"]::-webkit-inner-spin-button,
        input[type="number"]::-webkit-outer-spin-button {
            -webkit-appearance: none;
            margin: 0;
        }

        input[type="number"] {
            -moz-appearance: textfield;
        }

        .card-text {
            margin-bottom: 10px;
        }

        td.quantity-column {
            text-align: left;
        }

        .quantity-header {
            position: relative;
            left: 2px;
        }
    </style>
</head>
<body>

    <h2>Cart Items</h2>

    <table>
        <thead>
            <tr>
                <th>Product ID</th>
                <th>Product Name</th>
                <th>Unit Price</th>
                <th class="quantity-header">Quantity</th>
                <th>Total Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr data-product-id="@item.ProductId">
                    <td>@item.ProductId</td>
                    <td>@item.ProductName</td>
                    <td>@item.UnitPrice.ToString("F2")</td>
                    <td class="quantity-column">
                        <div class="qty-input">
                            <button class="qty-count qty-count--minus" data-action="minus" type="button" onclick="handleQuantityChange(this, @item.ProductId)"></button>
                            <input class="product-qty" type="number" name="quantity" min="0" value="@item.Quantity">
                            <button class="qty-count qty-count--add" data-action="add" type="button" onclick="handleQuantityChange(this, @item.ProductId)"></button>
                        </div>
                    </td>
                    <td>@item.TotalPrice.ToString("F2")</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="buttons">
        <button onclick="location.href='/Reservation/Index'">Reservation table</button>
    </div>

    <script>
        function handleQuantityChange(button, productId) {
            const inputField = button.parentNode.querySelector('.product-qty');
            let value = parseInt(inputField.value);
            const action = button.dataset.action;
            value = action === 'add' ? value + 1 : Math.max(0, value - 1);
            inputField.value = value;

            updateTotalQuantity();
        }

        function updateTotalQuantity() {
            const quantityInputs = document.querySelectorAll('.product-qty');
            let totalQuantity = 0;
            quantityInputs.forEach(input => {
                totalQuantity += parseInt(input.value) || 0;
            });
            document.getElementById('total-quantity').textContent = totalQuantity;
        }
    </script>
</body>
</html>
