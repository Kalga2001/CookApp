@using CookApp.BLL.Dtos.RoleManagementDto
@model IEnumerable<RoleDto> 
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .navbar {
            background-color: #333;
            overflow: hidden;
            width: 100%;
        }

            .navbar a {
                float: left;
                display: block;
                color: white;
                text-align: center;
                padding: 8px 20px;
                text-decoration: none;
                cursor: pointer;
                margin-right: -10px;
            }

                .navbar a:hover {
                    background-color: #ddd;
                    color: black;
                }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #f2f2f2;
        }

        .rounded-btn {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            border: none;
            background-color: #65a66f;
            color: #fff;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .rounded-btn:hover {
            background-color: #65a66f;
        }
    </style>
</head>
<body>
    <div class="navbar">
        @Html.ActionLink("Home", "Index", "Admin")
        @Html.ActionLink("Manage Users", "Index", "ManageUsers")
        @Html.ActionLink("Manage Roles", "Index", "ManageRoles")
    </div>

    <div class="container-fluid">
        <div class="row justify-content-end mt-3">
            <div class="col-auto">
                <button type="button" onclick="openCreatePopup()" class="rounded-btn">
                    <i class="bi bi-plus"></i> +
                </button>
            </div>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <div>
            <table>
                <thead>
                    <tr>
                        <th>Role ID</th>
                        <th>Role Name</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var role in Model)
                    {
                        <tr>
                            <td>@role.RoleID</td>
                            <td>@role.RoleName</td>
                            <td>
                                <button type="button" onclick="openEditPopup('@role.RoleID')" class="btn btn-primary">Edit</button>
                            </td>

                            <td>
                                <button type="button" class="btn btn-danger" onclick="openDeleteModal('@role.RoleID')">Delete</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <p>No roles found.</p>
    }
   

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
